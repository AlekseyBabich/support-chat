{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@src/*": ["src/*"],
      "@component/*": ["src/frontend/component/*"],
      "@config": ["src/config/config"],
      "@db/*": ["src/backend/db/*"],
      "@logger": ["src/backend/util/Logger"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "tests"
  ]
}
